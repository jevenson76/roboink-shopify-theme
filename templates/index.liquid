{% comment %}
  Homepage template
{% endcomment %}

<!-- Hero Section -->
{% section 'hero' %}

<!-- Announcement Bar -->
{% section 'announcement-bar' %}

<!-- Featured Products -->
{% section 'featured-products' %}

<!-- Collections Showcase -->
<section class="collections-showcase">
  <div class="container">
    <h2 class="section-heading">Explore Our Collections</h2>
    
    <div class="collection-grid">
      {% for collection in collections limit: 8 %}
        {% unless collection.handle == 'frontpage' %}
          <div class="collection-card">
            <a href="{{ collection.url }}" class="collection-link">
              {% if collection.image %}
                <img src="{{ collection.image | image_url: width: 300, height: 300 }}" 
                     alt="{{ collection.title | escape }}" 
                     class="collection-image">
              {% else %}
                <div class="collection-placeholder">
                  <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                    <circle cx="8.5" cy="8.5" r="1.5"/>
                    <polyline points="21,15 16,10 5,21"/>
                  </svg>
                </div>
              {% endif %}
              
              <div class="collection-info">
                <h3 class="collection-title">{{ collection.title }}</h3>
                <p class="collection-count">{{ collection.products_count }} products</p>
              </div>
            </a>
          </div>
        {% endunless %}
      {% endfor %}
    </div>
  </div>
</section>

<!-- Value Proposition -->
<section class="value-section">
  <div class="container">
    <div class="value-grid">
      <div class="value-item">
        <div class="value-icon">
          <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 2L2 7v10c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V7l-10-5z"/>
          </svg>
        </div>
        <h3>Premium Quality</h3>
        <p>High-quality materials and printing for lasting steampunk style</p>
      </div>
      
      <div class="value-item">
        <div class="value-icon">
          <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"/>
            <polyline points="12 6 12 12 16 14"/>
          </svg>
        </div>
        <h3>Made to Order</h3>
        <p>Each item is crafted specifically for you, reducing waste</p>
      </div>
      
      <div class="value-item">
        <div class="value-icon">
          <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 2.69l5.66 5.66a8 8 0 1 1-11.31 0z"/>
          </svg>
        </div>
        <h3>Eco-Friendly</h3>
        <p>Sustainable printing practices with eco-friendly inks</p>
      </div>
    </div>
  </div>
</section>

<style>
  .collections-showcase {
    padding: 4rem 0;
    background: var(--color-parchment);
  }
  
  .section-heading {
    text-align: center;
    font-size: 2.5rem;
    color: var(--color-navy);
    margin-bottom: 3rem;
    font-family: var(--font-heading);
  }
  
  .collection-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }
  
  .collection-card {
    background: white;
    border-radius: 0.5rem;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: transform var(--transition-fast);
  }
  
  .collection-card:hover {
    transform: translateY(-5px);
  }
  
  .collection-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }
  
  .collection-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }
  
  .collection-placeholder {
    width: 100%;
    height: 200px;
    background: var(--color-parchment);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-copper);
  }
  
  .collection-info {
    padding: 1.5rem;
  }
  
  .collection-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-navy);
    margin-bottom: 0.5rem;
  }
  
  .collection-count {
    color: var(--color-text-light);
    font-size: 0.875rem;
  }
  
  .value-section {
    padding: 4rem 0;
    background: var(--color-navy);
    color: white;
  }
  
  .value-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 3rem;
  }
  
  .value-item {
    text-align: center;
  }
  
  .value-icon {
    width: 80px;
    height: 80px;
    background: var(--color-copper);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
    color: white;
  }
  
  .value-item h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: var(--color-parchment);
  }
  
  .value-item p {
    color: rgba(244, 232, 208, 0.8);
    line-height: 1.6;
  }
</style>