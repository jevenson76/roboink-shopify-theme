{% comment %}
  Product template optimized for Printful POD products
  
  Variables:
  - product: Shopify product object
  - current_variant: Currently selected variant
  - featured_image: Current product image
{% endcomment %}

<div class="product-template" data-section-id="{{ section.id }}" data-product-id="{{ product.id }}">
  <div class="container">
    <div class="product-grid">
      <!-- Product Images -->
      <div class="product-images">
        <div class="main-image">
          {% if product.featured_image %}
            <img src="{{ product.featured_image | img_url: '600x600' }}" 
                 alt="{{ product.featured_image.alt | escape }}"
                 class="product-featured-image">
          {% endif %}
        </div>
        
        {% if product.images.size > 1 %}
          <div class="thumbnail-grid">
            {% for image in product.images %}
              <button class="thumbnail" data-image-id="{{ image.id }}">
                <img src="{{ image | img_url: '100x100' }}" alt="{{ image.alt | escape }}">
              </button>
            {% endfor %}
          </div>
        {% endif %}
      </div>

      <!-- Product Information -->
      <div class="product-info">
        <h1 class="product-title">{{ product.title }}</h1>
        
        <div class="product-price">
          <span class="price">{{ product.price | money }}</span>
          {% if product.compare_at_price > product.price %}
            <span class="compare-price">{{ product.compare_at_price | money }}</span>
          {% endif %}
        </div>

        <div class="product-badges">
          <span class="badge badge-pod">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 2L2 7v10c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V7l-10-5z"/>
            </svg>
            Made to Order
          </span>
          <span class="badge badge-eco">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
            </svg>
            Eco-Friendly
          </span>
        </div>

        <form action="/cart/add" method="post" enctype="multipart/form-data" class="product-form">
          {% unless product.has_only_default_variant %}
            <div class="product-options">
              {% for option in product.options_with_values %}
                <div class="option-group">
                  <label for="Option{{ option.position }}">{{ option.name }}</label>
                  <select name="id" id="Option{{ option.position }}" class="variant-select">
                    {% for value in option.values %}
                      <option value="{{ value }}" {% if option.selected_value == value %}selected{% endif %}>
                        {{ value }}
                      </option>
                    {% endfor %}
                  </select>
                </div>
              {% endfor %}
            </div>
          {% endunless %}

          <!-- Size Chart for Apparel -->
          {% if product.type contains 'Shirt' or product.type contains 'Hoodie' or product.type contains 'Tank' %}
            {% render 'size-chart', product: product %}
          {% endif %}

          <div class="product-actions">
            <div class="quantity-selector">
              <button type="button" class="quantity-button minus">-</button>
              <input type="number" name="quantity" value="1" min="1" class="quantity-input">
              <button type="button" class="quantity-button plus">+</button>
            </div>

            <button type="submit" name="add" class="btn-add-to-cart">
              Add to Cart
            </button>
          </div>

          <!-- Production Time Notice -->
          <div class="production-notice">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"/>
              <polyline points="12 6 12 12 16 14"/>
            </svg>
            <div class="notice-content">
              <strong>Production Time:</strong> 2-7 business days
              <p class="notice-detail">Each item is made-to-order with care</p>
            </div>
          </div>
        </form>

        <!-- Product Description -->
        <div class="product-description">
          {{ product.description }}
        </div>

        <!-- POD Information Tabs -->
        <div class="product-tabs">
          <div class="tab-buttons">
            <button class="tab-button active" data-tab="details">Product Details</button>
            <button class="tab-button" data-tab="care">Care Instructions</button>
            <button class="tab-button" data-tab="shipping">Shipping Info</button>
          </div>

          <div class="tab-content">
            <div class="tab-pane active" data-tab-content="details">
              <h3>Product Details</h3>
              <ul>
                <li>Premium quality materials</li>
                <li>Digitally printed with eco-friendly inks</li>
                <li>Made-to-order to reduce waste</li>
                <li>Printed and shipped from USA/EU facilities</li>
                {% if product.type contains 'Shirt' %}
                  <li>100% combed ring-spun cotton (Heather colors contain polyester)</li>
                  <li>Pre-shrunk fabric</li>
                {% elsif product.type contains 'Mug' %}
                  <li>Ceramic construction</li>
                  <li>Dishwasher and microwave safe</li>
                {% endif %}
              </ul>
            </div>

            <div class="tab-pane" data-tab-content="care">
              <h3>Care Instructions</h3>
              {% if product.type contains 'Shirt' or product.type contains 'Hoodie' %}
                <ul>
                  <li>Machine wash cold, inside-out, gentle cycle</li>
                  <li>Tumble dry low or hang to dry</li>
                  <li>Cool iron if needed (do not iron decoration)</li>
                  <li>Do not bleach</li>
                  <li>Do not dry clean</li>
                </ul>
              {% elsif product.type contains 'Mug' %}
                <ul>
                  <li>Dishwasher safe (top rack)</li>
                  <li>Microwave safe</li>
                  <li>Hand wash recommended for longevity</li>
                </ul>
              {% else %}
                <p>Care instructions vary by product. Please refer to the product label.</p>
              {% endif %}
            </div>

            <div class="tab-pane" data-tab-content="shipping">
              <h3>Shipping Information</h3>
              <div class="shipping-timeline">
                <div class="timeline-step">
                  <div class="step-icon">1</div>
                  <div class="step-content">
                    <strong>Order Placed</strong>
                    <p>Your order is sent to production</p>
                  </div>
                </div>
                <div class="timeline-step">
                  <div class="step-icon">2</div>
                  <div class="step-content">
                    <strong>Production</strong>
                    <p>2-7 business days</p>
                  </div>
                </div>
                <div class="timeline-step">
                  <div class="step-icon">3</div>
                  <div class="step-content">
                    <strong>Shipping</strong>
                    <p>3-5 business days (standard)</p>
                  </div>
                </div>
              </div>
              <p class="shipping-note">
                <strong>Total delivery time:</strong> 5-12 business days for US orders
              </p>
            </div>
          </div>
        </div>

        <!-- Trust Badges -->
        <div class="trust-badges">
          <div class="trust-badge">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 2L2 7v10c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V7l-10-5z"/>
            </svg>
            <span>Secure Checkout</span>
          </div>
          <div class="trust-badge">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M21 8.5c0-.83-.67-1.5-1.5-1.5h-6.52L12 2 11.02 7H4.5C3.67 7 3 7.67 3 8.5S3.67 10 4.5 10H11v7.5c0 .83.67 1.5 1.5 1.5s1.5-.67 1.5-1.5V10h6.5c.83 0 1.5-.67 1.5-1.5z"/>
            </svg>
            <span>Quality Guaranteed</span>
          </div>
          <div class="trust-badge">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"/>
              <path d="M8 14s1.5 2 4 2 4-2 4-2"/>
              <line x1="9" y1="9" x2="9.01" y2="9"/>
              <line x1="15" y1="9" x2="15.01" y2="9"/>
            </svg>
            <span>Happy Customers</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .product-template {
    padding: 4rem 0;
  }

  .product-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: start;
  }

  @media (max-width: 768px) {
    .product-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }

  /* Product Images */
  .main-image img {
    width: 100%;
    height: auto;
    border-radius: 0.5rem;
    box-shadow: var(--shadow-lg);
  }

  .thumbnail-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1rem;
    margin-top: 1rem;
  }

  .thumbnail {
    border: 2px solid transparent;
    border-radius: 0.25rem;
    overflow: hidden;
    cursor: pointer;
    transition: border-color var(--transition-fast);
  }

  .thumbnail:hover,
  .thumbnail.active {
    border-color: var(--color-copper);
  }

  .thumbnail img {
    width: 100%;
    height: auto;
  }

  /* Product Info */
  .product-title {
    font-size: 2.5rem;
    color: var(--color-navy);
    margin-bottom: 1rem;
  }

  .product-price {
    font-size: 2rem;
    color: var(--color-copper);
    margin-bottom: 1.5rem;
  }

  .compare-price {
    text-decoration: line-through;
    color: var(--color-text-light);
    margin-left: 1rem;
  }

  /* Badges */
  .product-badges {
    display: flex;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--color-parchment);
    border: 1px solid var(--color-copper);
    border-radius: 2rem;
    font-size: 0.875rem;
    color: var(--color-navy);
  }

  .badge svg {
    width: 16px;
    height: 16px;
  }

  /* Product Form */
  .product-options {
    margin-bottom: 2rem;
  }

  .option-group {
    margin-bottom: 1.5rem;
  }

  .option-group label {
    display: block;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: var(--color-navy);
  }

  .variant-select {
    width: 100%;
    padding: 0.75rem;
    border: 2px solid var(--color-navy);
    border-radius: 0.25rem;
    font-size: 1rem;
    background: white;
  }

  /* Quantity & Add to Cart */
  .product-actions {
    display: flex;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .quantity-selector {
    display: flex;
    border: 2px solid var(--color-navy);
    border-radius: 0.25rem;
  }

  .quantity-button {
    background: none;
    border: none;
    padding: 0.75rem 1rem;
    cursor: pointer;
    font-size: 1.25rem;
    color: var(--color-navy);
  }

  .quantity-input {
    width: 60px;
    text-align: center;
    border: none;
    border-left: 2px solid var(--color-navy);
    border-right: 2px solid var(--color-navy);
  }

  .btn-add-to-cart {
    flex: 1;
    padding: 1rem 2rem;
    background: var(--color-copper);
    color: white;
    border: none;
    border-radius: 0.25rem;
    font-size: 1.125rem;
    font-weight: 600;
    cursor: pointer;
    transition: all var(--transition-fast);
  }

  .btn-add-to-cart:hover {
    background: var(--color-brass);
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }

  /* Production Notice */
  .production-notice {
    display: flex;
    gap: 1rem;
    padding: 1rem;
    background: rgba(184, 115, 51, 0.1);
    border-left: 3px solid var(--color-copper);
    border-radius: 0.25rem;
    margin-bottom: 2rem;
  }

  .production-notice svg {
    flex-shrink: 0;
    color: var(--color-copper);
  }

  .notice-detail {
    font-size: 0.875rem;
    color: var(--color-text-light);
    margin-top: 0.25rem;
  }

  /* Tabs */
  .product-tabs {
    margin-top: 3rem;
  }

  .tab-buttons {
    display: flex;
    border-bottom: 2px solid var(--color-navy);
    margin-bottom: 2rem;
  }

  .tab-button {
    padding: 1rem 2rem;
    background: none;
    border: none;
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-text-light);
    cursor: pointer;
    position: relative;
    transition: color var(--transition-fast);
  }

  .tab-button.active {
    color: var(--color-navy);
  }

  .tab-button.active::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    right: 0;
    height: 2px;
    background: var(--color-copper);
  }

  .tab-pane {
    display: none;
  }

  .tab-pane.active {
    display: block;
  }

  .tab-pane h3 {
    color: var(--color-copper);
    margin-bottom: 1rem;
  }

  .tab-pane ul {
    list-style: none;
    padding: 0;
  }

  .tab-pane li {
    padding: 0.5rem 0;
    padding-left: 1.5rem;
    position: relative;
  }

  .tab-pane li::before {
    content: 'âš™';
    position: absolute;
    left: 0;
    color: var(--color-copper);
  }

  /* Shipping Timeline */
  .shipping-timeline {
    display: flex;
    justify-content: space-between;
    margin: 2rem 0;
  }

  .timeline-step {
    flex: 1;
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .step-icon {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: var(--color-copper);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
  }

  .step-content strong {
    display: block;
    color: var(--color-navy);
  }

  .step-content p {
    font-size: 0.875rem;
    color: var(--color-text-light);
  }

  /* Trust Badges */
  .trust-badges {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
    margin-top: 3rem;
    padding-top: 3rem;
    border-top: 1px solid var(--color-border);
  }

  .trust-badge {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    justify-content: center;
    color: var(--color-text-light);
  }

  .trust-badge svg {
    color: var(--color-copper);
  }
</style>

<script>
  // Tab functionality
  document.querySelectorAll('.tab-button').forEach(button => {
    button.addEventListener('click', () => {
      const tabName = button.getAttribute('data-tab');
      
      // Update buttons
      document.querySelectorAll('.tab-button').forEach(btn => {
        btn.classList.remove('active');
      });
      button.classList.add('active');
      
      // Update content
      document.querySelectorAll('.tab-pane').forEach(pane => {
        pane.classList.remove('active');
      });
      document.querySelector(`[data-tab-content="${tabName}"]`).classList.add('active');
    });
  });

  // Quantity selector
  document.querySelector('.quantity-button.minus').addEventListener('click', () => {
    const input = document.querySelector('.quantity-input');
    const value = parseInt(input.value);
    if (value > 1) input.value = value - 1;
  });

  document.querySelector('.quantity-button.plus').addEventListener('click', () => {
    const input = document.querySelector('.quantity-input');
    const value = parseInt(input.value);
    input.value = value + 1;
  });

  // Image gallery
  document.querySelectorAll('.thumbnail').forEach(thumb => {
    thumb.addEventListener('click', () => {
      const imageId = thumb.getAttribute('data-image-id');
      // Implementation would swap main image
    });
  });
</script>