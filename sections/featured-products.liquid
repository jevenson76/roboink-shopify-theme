{{ 'section-featured-products.css' | asset_url | stylesheet_tag }}

<div class="featured-products section-{{ section.id }}">
  <div class="page-width">
    {%- if section.settings.heading != blank or section.settings.subheading != blank -%}
      <div class="section-header text-center">
        {%- if section.settings.heading != blank -%}
          <h2 class="section-header__heading">{{ section.settings.heading }}</h2>
        {%- endif -%}
        
        <div class="section-header__divider">
          <span class="divider-line"></span>
          <span class="divider-dot"></span>
          <span class="divider-line"></span>
        </div>
        
        {%- if section.settings.subheading != blank -%}
          <p class="section-header__subheading">{{ section.settings.subheading }}</p>
        {%- endif -%}
      </div>
    {%- endif -%}
    
    <div class="grid grid--{{ section.settings.columns_desktop }}-col grid--2-col-mobile{% if section.settings.swipe_on_mobile %} slider slider--mobile{% endif %}">
      {%- for product in section.settings.collection.products limit: section.settings.products_to_show -%}
        <div class="grid__item">
          {% render 'product-card',
            product_card_product: product,
            show_quick_add: section.settings.show_quick_add,
            show_rating: settings.show_product_rating,
            section_id: section.id
          %}
        </div>
      {%- else -%}
        {%- for i in (1..section.settings.products_to_show) -%}
          <div class="grid__item">
            {% render 'product-card-placeholder' %}
          </div>
        {%- endfor -%}
      {%- endfor -%}
    </div>
    
    {%- if section.settings.show_view_all -%}
      <div class="center">
        <a href="{{ section.settings.collection.url }}" class="button button--secondary">
          {{ 'sections.featured_collection.view_all' | t }}
        </a>
      </div>
    {%- endif -%}
  </div>
</div>

<style>
  .section-{{ section.id }} {
    background: linear-gradient(to bottom, rgba(255,255,255,1), rgba(26,26,46,0.05), rgba(26,26,46,0.1));
    padding: 6rem 0;
    border-bottom: 4px solid rgba(26,26,46,0.4);
    position: relative;
    overflow: hidden;
  }
  
  .section-{{ section.id }}::before,
  .section-{{ section.id }}::after {
    content: '';
    position: absolute;
    border-radius: 50%;
    filter: blur(3rem);
    opacity: 0.1;
  }
  
  .section-{{ section.id }}::before {
    top: 0;
    left: 0;
    width: 30rem;
    height: 30rem;
    background: linear-gradient(to bottom right, var(--color-copper), transparent);
    transform: translate(-50%, -50%);
  }
  
  .section-{{ section.id }}::after {
    bottom: 0;
    right: 0;
    width: 30rem;
    height: 30rem;
    background: linear-gradient(to top left, var(--color-navy), transparent);
    transform: translate(50%, 50%);
  }
  
  .section-header {
    margin-bottom: 4rem;
    position: relative;
    z-index: 1;
  }
  
  .section-header__heading {
    font-size: 5rem;
    font-weight: 700;
    color: var(--color-navy);
    margin-bottom: 2rem;
    text-shadow: 3px 3px 6px rgba(0,0,0,0.4), 0 0 30px rgba(184,115,51,0.3);
    background: linear-gradient(180deg, #1A2634 0%, #1A2634 50%, #2a3644 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .section-header__divider {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 2rem;
  }
  
  .divider-line {
    height: 2px;
    width: 6rem;
    background: linear-gradient(to right, transparent, var(--color-copper));
  }
  
  .divider-line:last-child {
    background: linear-gradient(to left, transparent, var(--color-copper));
  }
  
  .divider-dot {
    width: 0.75rem;
    height: 0.75rem;
    background-color: var(--color-copper);
    border-radius: 50%;
  }
  
  .section-header__subheading {
    font-size: 2rem;
    color: var(--color-copper);
    font-weight: 700;
    text-shadow: 1px 1px 3px rgba(0,0,0,0.2);
  }
  
  .grid {
    display: grid;
    gap: 2rem;
    position: relative;
    z-index: 1;
  }
  
  .grid--2-col {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .grid--3-col {
    grid-template-columns: repeat(3, 1fr);
  }
  
  .grid--4-col {
    grid-template-columns: repeat(4, 1fr);
  }
  
  @media screen and (max-width: 749px) {
    .grid--2-col-mobile {
      grid-template-columns: repeat(2, 1fr);
    }
    
    .section-header__heading {
      font-size: 3.5rem;
    }
  }
  
  .center {
    text-align: center;
    margin-top: 4rem;
  }
</style>

{% schema %}
{
  "name": "Featured products",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "Featured Designs",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "subheading",
      "default": "Discover our most popular steampunk creations, ready to wear",
      "label": "Subheading"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 8,
      "label": "Maximum products to show"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 4,
      "label": "Number of columns on desktop"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "default": true,
      "label": "Show \"View all\" button"
    },
    {
      "type": "checkbox",
      "id": "show_quick_add",
      "default": true,
      "label": "Show quick add button"
    },
    {
      "type": "checkbox",
      "id": "swipe_on_mobile",
      "default": false,
      "label": "Enable swipe on mobile"
    }
  ],
  "presets": [
    {
      "name": "Featured products"
    }
  ]
}
{% endschema %}