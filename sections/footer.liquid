{% comment %}
  Footer section
{% endcomment %}

<footer class="site-footer" data-section-id="{{ section.id }}">
  <div class="footer-main">
    <div class="container">
      <div class="footer-grid">
        <!-- Company Info -->
        <div class="footer-column">
          <h3 class="footer-heading">{{ section.settings.company_heading }}</h3>
          <div class="footer-content">
            {{ section.settings.company_description }}
          </div>
          {% if section.settings.show_social %}
            <div class="social-links">
              {% if section.settings.facebook_url != blank %}
                <a href="{{ section.settings.facebook_url }}" target="_blank" rel="noopener">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M18.77 7.46H14.5v-1.9c0-.9.6-1.1 1-1.1h3V.5h-4.33C10.24.5 9.5 3.44 9.5 5.32v2.15h-3v4h3v12h5v-12h3.85l.42-4z"/>
                  </svg>
                </a>
              {% endif %}
              {% if section.settings.instagram_url != blank %}
                <a href="{{ section.settings.instagram_url }}" target="_blank" rel="noopener">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zM5.838 12a6.162 6.162 0 1112.324 0 6.162 6.162 0 01-12.324 0zM12 16a4 4 0 110-8 4 4 0 010 8zm4.965-10.405a1.44 1.44 0 112.881.001 1.44 1.44 0 01-2.881-.001z"/>
                  </svg>
                </a>
              {% endif %}
            </div>
          {% endif %}
        </div>

        <!-- Quick Links -->
        <div class="footer-column">
          <h3 class="footer-heading">Quick Links</h3>
          <ul class="footer-links">
            <li><a href="/collections/all">All Products</a></li>
            <li><a href="/pages/about">About Us</a></li>
            <li><a href="/pages/contact">Contact</a></li>
            <li><a href="/pages/custom-requests">Custom Designs</a></li>
          </ul>
        </div>

        <!-- Customer Service -->
        <div class="footer-column">
          <h3 class="footer-heading">Customer Service</h3>
          <ul class="footer-links">
            <li><a href="/policies/shipping-policy">Shipping Policy</a></li>
            <li><a href="/policies/refund-policy">Returns & Refunds</a></li>
            <li><a href="/policies/privacy-policy">Privacy Policy</a></li>
            <li><a href="/policies/terms-of-service">Terms of Service</a></li>
          </ul>
        </div>

        <!-- Newsletter -->
        {% if section.settings.show_newsletter %}
          <div class="footer-column">
            <h3 class="footer-heading">{{ section.settings.newsletter_heading }}</h3>
            <p class="footer-text">{{ section.settings.newsletter_text }}</p>
            <form action="/contact" method="post" class="newsletter-form">
              <input type="hidden" name="form_type" value="customer">
              <input type="hidden" name="utf8" value="✓">
              <input type="hidden" name="contact[tags]" value="newsletter">
              <input type="email" name="contact[email]" placeholder="Your email" required>
              <button type="submit">Subscribe</button>
            </form>
          </div>
        {% endif %}
      </div>
    </div>
  </div>

  <div class="footer-bottom">
    <div class="container">
      <p class="copyright">{{ section.settings.copyright_text }}</p>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background: var(--color-navy);
    color: var(--color-parchment);
    margin-top: 4rem;
  }

  .footer-main {
    padding: 3rem 0;
    border-bottom: 1px solid rgba(244, 232, 208, 0.1);
  }

  .footer-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 3rem;
  }

  .footer-heading {
    font-family: var(--font-heading);
    font-size: 1.25rem;
    margin-bottom: 1rem;
    color: var(--color-copper);
  }

  .footer-content {
    font-size: 0.875rem;
    line-height: 1.6;
    margin-bottom: 1rem;
    opacity: 0.9;
  }

  .footer-links {
    list-style: none;
    padding: 0;
  }

  .footer-links li {
    margin-bottom: 0.5rem;
  }

  .footer-links a {
    color: var(--color-parchment);
    text-decoration: none;
    font-size: 0.875rem;
    opacity: 0.9;
    transition: all var(--transition-fast);
  }

  .footer-links a:hover {
    color: var(--color-copper);
    opacity: 1;
  }

  .social-links {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
  }

  .social-links a {
    color: var(--color-parchment);
    transition: color var(--transition-fast);
  }

  .social-links a:hover {
    color: var(--color-copper);
  }

  .newsletter-form {
    display: flex;
    margin-top: 1rem;
  }

  .newsletter-form input {
    flex: 1;
    padding: 0.75rem;
    border: 1px solid rgba(244, 232, 208, 0.3);
    background: rgba(244, 232, 208, 0.1);
    color: var(--color-parchment);
    border-radius: 0.25rem 0 0 0.25rem;
  }

  .newsletter-form input::placeholder {
    color: rgba(244, 232, 208, 0.6);
  }

  .newsletter-form button {
    padding: 0.75rem 1.5rem;
    background: var(--color-copper);
    color: white;
    border: none;
    border-radius: 0 0.25rem 0.25rem 0;
    cursor: pointer;
    transition: background var(--transition-fast);
  }

  .newsletter-form button:hover {
    background: var(--color-brass);
  }

  .footer-bottom {
    padding: 1.5rem 0;
    text-align: center;
  }

  .copyright {
    font-size: 0.875rem;
    opacity: 0.8;
  }
</style>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "header",
      "content": "Company Info"
    },
    {
      "type": "text",
      "id": "company_heading",
      "label": "Company heading",
      "default": "About RoboInk"
    },
    {
      "type": "textarea",
      "id": "company_description",
      "label": "Company description",
      "default": "Where Victorian elegance meets mechanical innovation. Custom steampunk designs printed on demand."
    },
    {
      "type": "header",
      "content": "Newsletter"
    },
    {
      "type": "checkbox",
      "id": "show_newsletter",
      "label": "Show newsletter signup",
      "default": true
    },
    {
      "type": "text",
      "id": "newsletter_heading",
      "label": "Newsletter heading",
      "default": "Stay Connected"
    },
    {
      "type": "text",
      "id": "newsletter_text",
      "label": "Newsletter text",
      "default": "Get exclusive designs and special offers"
    },
    {
      "type": "header",
      "content": "Social Media"
    },
    {
      "type": "checkbox",
      "id": "show_social",
      "label": "Show social links",
      "default": true
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL"
    },
    {
      "type": "header",
      "content": "Footer Bottom"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright text",
      "default": "© 2025 RoboInk Tees. All rights reserved."
    }
  ]
}
{% endschema %}