{% comment %}
  Renders a size chart modal for apparel products
  
  Accepts:
  - product: {Object} Product object
  
  Usage:
  {% render 'size-chart', product: product %}
{% endcomment %}

{%- liquid
  assign has_size_chart = false
  assign product_type_handle = product.type | handle
  
  case product_type_handle
    when 'tee-shirts' or 't-shirts' or 'tees'
      assign has_size_chart = true
      assign chart_type = 'unisex-tee'
    when 'hoodies' or 'sweatshirts' 
      assign has_size_chart = true
      assign chart_type = 'unisex-hoodie'
    when 'tank-tops'
      assign has_size_chart = true
      assign chart_type = 'tank-top'
    when 'long-sleeve-tees'
      assign has_size_chart = true
      assign chart_type = 'long-sleeve'
  endcase
-%}

{%- if has_size_chart -%}
  <button type="button" class="size-chart-trigger" data-open-size-chart>
    <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M2 2h16v16H2V2z" stroke="currentColor" stroke-width="2"/>
      <path d="M7 2v16M13 2v16M2 7h16M2 13h16" stroke="currentColor" stroke-width="1"/>
    </svg>
    Size Chart
  </button>

  <div class="size-chart-modal" data-size-chart-modal hidden>
    <div class="size-chart-modal__overlay" data-close-size-chart></div>
    <div class="size-chart-modal__content">
      <button type="button" class="size-chart-modal__close" data-close-size-chart>
        <span class="visually-hidden">Close size chart</span>
        {% render 'icon-close' %}
      </button>
      
      <h3 class="size-chart-modal__title">Size Chart - {{ product.type }}</h3>
      
      {%- case chart_type -%}
        {%- when 'unisex-tee' -%}
          <div class="size-chart-table-wrapper">
            <table class="size-chart-table">
              <thead>
                <tr>
                  <th>Size</th>
                  <th>Chest (inches)</th>
                  <th>Length (inches)</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>S</td>
                  <td>34-37</td>
                  <td>28</td>
                </tr>
                <tr>
                  <td>M</td>
                  <td>38-41</td>
                  <td>29</td>
                </tr>
                <tr>
                  <td>L</td>
                  <td>42-45</td>
                  <td>30</td>
                </tr>
                <tr>
                  <td>XL</td>
                  <td>46-49</td>
                  <td>31</td>
                </tr>
                <tr>
                  <td>2XL</td>
                  <td>50-53</td>
                  <td>32</td>
                </tr>
                <tr>
                  <td>3XL</td>
                  <td>54-57</td>
                  <td>33</td>
                </tr>
              </tbody>
            </table>
          </div>
          
        {%- when 'unisex-hoodie' -%}
          <div class="size-chart-table-wrapper">
            <table class="size-chart-table">
              <thead>
                <tr>
                  <th>Size</th>
                  <th>Chest (inches)</th>
                  <th>Length (inches)</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>S</td>
                  <td>36</td>
                  <td>27</td>
                </tr>
                <tr>
                  <td>M</td>
                  <td>40</td>
                  <td>28</td>
                </tr>
                <tr>
                  <td>L</td>
                  <td>44</td>
                  <td>29</td>
                </tr>
                <tr>
                  <td>XL</td>
                  <td>48</td>
                  <td>30</td>
                </tr>
                <tr>
                  <td>2XL</td>
                  <td>52</td>
                  <td>31</td>
                </tr>
                <tr>
                  <td>3XL</td>
                  <td>56</td>
                  <td>32</td>
                </tr>
              </tbody>
            </table>
          </div>
      {%- endcase -%}
      
      <div class="size-chart-info">
        <h4>How to Measure:</h4>
        <ul>
          <li><strong>Chest:</strong> Measure around the fullest part of your chest, keeping tape level.</li>
          <li><strong>Length:</strong> Measure from highest point of shoulder to bottom hem.</li>
        </ul>
        
        <p class="size-chart-note">
          <strong>Note:</strong> All measurements are in inches. These are garment measurements, not body measurements. 
          For a relaxed fit, we recommend ordering your usual size. For a fitted look, size down.
        </p>
      </div>
    </div>
  </div>

  <style>
    .size-chart-trigger {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.5rem 1rem;
      background: transparent;
      border: 1px solid var(--color-navy);
      border-radius: 0.25rem;
      color: var(--color-navy);
      font-size: 1.4rem;
      cursor: pointer;
      transition: all var(--transition-fast);
      margin-bottom: 1rem;
    }
    
    .size-chart-trigger:hover {
      background-color: var(--color-navy);
      color: var(--color-parchment);
    }
    
    .size-chart-modal {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      z-index: 999;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 2rem;
    }
    
    .size-chart-modal[hidden] {
      display: none;
    }
    
    .size-chart-modal__overlay {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-color: rgba(26, 26, 46, 0.7);
      cursor: pointer;
    }
    
    .size-chart-modal__content {
      position: relative;
      background-color: var(--color-parchment);
      border: 2px solid var(--color-navy);
      border-radius: 0.5rem;
      padding: 3rem;
      max-width: 600px;
      width: 100%;
      max-height: 90vh;
      overflow-y: auto;
      box-shadow: var(--shadow-xl);
    }
    
    .size-chart-modal__close {
      position: absolute;
      top: 1rem;
      right: 1rem;
      background: none;
      border: none;
      cursor: pointer;
      padding: 0.5rem;
      color: var(--color-navy);
      transition: color var(--transition-fast);
    }
    
    .size-chart-modal__close:hover {
      color: var(--color-copper);
    }
    
    .size-chart-modal__title {
      margin-bottom: 2rem;
      color: var(--color-navy);
      font-size: 2.4rem;
    }
    
    .size-chart-table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 2rem;
    }
    
    .size-chart-table th,
    .size-chart-table td {
      padding: 1rem;
      text-align: center;
      border: 1px solid var(--color-navy);
    }
    
    .size-chart-table th {
      background-color: var(--color-navy);
      color: var(--color-parchment);
      font-weight: 600;
    }
    
    .size-chart-table tbody tr:nth-child(even) {
      background-color: rgba(26, 26, 46, 0.05);
    }
    
    .size-chart-info h4 {
      margin-bottom: 1rem;
      color: var(--color-copper);
    }
    
    .size-chart-info ul {
      margin-bottom: 1.5rem;
      padding-left: 2rem;
    }
    
    .size-chart-info li {
      margin-bottom: 0.5rem;
    }
    
    .size-chart-note {
      padding: 1rem;
      background-color: rgba(184, 115, 51, 0.1);
      border-left: 3px solid var(--color-copper);
      font-size: 1.3rem;
      line-height: 1.5;
    }
  </style>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const triggers = document.querySelectorAll('[data-open-size-chart]');
      const modal = document.querySelector('[data-size-chart-modal]');
      const closers = document.querySelectorAll('[data-close-size-chart]');
      
      triggers.forEach(trigger => {
        trigger.addEventListener('click', () => {
          modal.removeAttribute('hidden');
          document.body.style.overflow = 'hidden';
        });
      });
      
      closers.forEach(closer => {
        closer.addEventListener('click', () => {
          modal.setAttribute('hidden', '');
          document.body.style.overflow = '';
        });
      });
      
      // Close on escape
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && !modal.hasAttribute('hidden')) {
          modal.setAttribute('hidden', '');
          document.body.style.overflow = '';
        }
      });
    });
  </script>
{%- endif -%}